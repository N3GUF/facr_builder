// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "facr_builder",
	// Or use a Dockerfile or Docker Compose file. More in"fo: https://containers.dev/guide/dockerfile
	//"image": "mcr.microsoft.com/devcontainers/python:1-3-bookworm",
	"build": {
		"dockerfile": "../Dockerfile"
	},
	// "dockerComposeFile": "docker-compose-devcontainer.yml",
	// "service": "devcontainer",
	// "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
	"customizations": {
		"vscode": {
			"settings": {
				"editor.formatOnSave": true,
				"editor.formatOnPaste": true,
				"editor.defaultFormatter": "charliermarsh.ruff",
				"editor.codeActionsOnSave": {
					"source.organizeImports": "explicit",
					"source.fixAll": "explicit"
				}
			},
			"extensions": [
				"eamodio.gitlens",
				"steoates.autoimport",
				"njpwerner.autodocstring",
				"ms-python.debugpy",
				"ms-python.python",
				"charliermarsh.ruff",
				"astral-sh.ty",
				"TabNine.tabnine-vscode"
			]
		}
	},
	"mounts": [
		"source=/Users/don.bernhardy/bin,target=/usr/app/bin,type=bind,consistency=cached",
		"source=/Users/don.bernhardy/conf,target=/usr/app/conf,type=bind,consistency=cached",
		"source=/Users/don.bernhardy/data,target=/usr/app/data,type=bind,consistency=cached",
		"source=/Users/don.bernhardy/logs,target=/usr/app/logs,type=bind,consistency=cached"
	],
	"containerEnv": {
		"TZ": "America/Chicago"
	},
	"runArgs": [
		"--env-file",
		".env"
	],
	// Use 'postCreateCommand' to run commands after the container is created.
	 "postCreateCommand": "uv sync",
	// Features to add to the dev container. More info: https://containers.dev/features.
	 "features": {
		"ghcr.io/devcontainers/features/github-cli:1": {
			"version": "latest",
			"installGitHubCLI": true
		},
			
		"ghcr.io/jsburckhardt/devcontainer-features/uv:1": {
			"version": "latest",
			"installUv": true,
			"installUvSync": true,
			"installUvWatch": true,
			"installUvRun": true
		}
	}
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],
	// Configure tool-specific properties.
	// "customizations": {},
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
